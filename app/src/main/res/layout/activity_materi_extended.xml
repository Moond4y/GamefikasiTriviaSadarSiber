<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MateriExtended"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightGreen"
        android:minHeight="?actionBarSize">

        <TextView
            android:id="@+id/triviaQuizText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/materi_title"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MateriExtended"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo"
            android:src="@drawable/hacker"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="90dp"
            app:civ_border_color="#FF909090"
            app:civ_border_width="2dp" />

        <TextView
        android:id="@+id/judulText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="JUDUL"
        android:textColor="@color/green"
        android:gravity="center"
        android:textSize="30sp"/>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
       android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/isiText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lorem"
            android:textColor="@color/white"
            android:justificationMode="inter_word"
            android:textSize="20sp" android:layout_marginRight="15dp"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>